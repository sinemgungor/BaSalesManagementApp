@model StockTypeSizeDetailVM

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Details"];
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@localizer["StockTypeSize"] /</span>
            @localizer["Details"]
        </h4>
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-4 mb-4">
                                @localizer["Size"]
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Size)
                            </dd>
                            <dt class="col-4 mb-4">
                                @localizer["Description"].ToString().ToUpper(new System.Globalization.CultureInfo("tr-TR"))
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-4 mb-4">
                                @localizer["ProductType"].ToString().ToUpper(new System.Globalization.CultureInfo("tr-TR"))
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.StockTypeName)
                            </dd>

                        </dl>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Update" asp-route-stockTypeSizeId="@Model.Id" class="btn btn-primary">
                            @localizer["Update"]
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            @localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
