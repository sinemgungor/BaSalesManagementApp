@model BaSalesManagementApp.MVC.Models.WarehouseVMs.WarehouseDetailVM
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Details"];
}
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@localizer["Warehouse"] /</span>
            @localizer["Details"]
        </h4>
        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-4 mb-4">
                                @localizer["WarehouseName"]
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-4 mb-4">
                                @localizer["Address"]
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Address)
                            </dd>
                            <dt class="col-4 mb-4">
                                @localizer["BranchName"]
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.BranchName)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer" style="margin-top:-50px">
                        @Html.RouteLink(localizer["Update"], "Update", new { warehouseId = Model.Id }, new { @class = "btn btn-primary" })
                        <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
